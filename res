<body>

  <div class="container">
    <h1>Калькулятор разницы веса</h1>

    <label for="inputA">Вес товара из А (г):</label>
    <input type="number" id="inputA" placeholder="Например: 200">

    <label for="inputB">Вес товара, который привезли (г):</label>
    <input type="number" id="inputB" placeholder="Например: 250">

    <button onclick="calculatePercentage()">Разница в %</button>

    <div id="result"></div>
  </div>

  <script>
    function calculatePercentage() {
      const A = parseFloat(document.getElementById("inputA").value);
      const B = parseFloat(document.getElementById("inputB").value);
      const result = document.getElementById("result");

      if (isNaN(A) || isNaN(B)) {
        result.style.display = "block";
        result.style.background = "#fed7d7";
        result.style.color = "#c53030";
        result.innerHTML = "Введите оба числа.";
        return;
      }

      if (A === 0) {
        result.style.display = "block";
        result.style.background = "#fed7d7";
        result.style.color = "#c53030";
        result.innerHTML = "Вес из А не может быть равен нулю.";
        return;
      }

      const X = ((A - B) / A) * 100;
      const percent = X.toFixed(2);

      let text = "";
      if (X < 0) {
        text = `Фактический вес больше заявленного на ${Math.abs(percent)}%`;
      } else if (X > 0) {
        text = `Фактический вес меньше заявленного на ${percent}%`;
      } else {
        text = `Фактический вес совпадает (0%)`;
      }

      result.style.display = "block";
      result.style.background = "#f0f9ff";
      result.style.color = "#2c5282";
      result.innerHTML = text;
    }
  </script>

</body>
